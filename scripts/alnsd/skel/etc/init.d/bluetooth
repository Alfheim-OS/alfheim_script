depend() {
	after coldplug
	need dbus localmount hostname
}

start() {
   	ebegin "Starting ${SVCNAME}"
	start-stop-daemon --start --background --exec /usr/lib/bluetooth/bluetoothd
	eend $?
}

stop() {
	ebegin "Shutting down ${SVCNAME}"
	start-stop-daemon --stop --quiet --exec /usr/lib/bluetooth/bluetoothd
	eend $?
}
